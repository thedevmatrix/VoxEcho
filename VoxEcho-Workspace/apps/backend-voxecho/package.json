{
  "name": "@vox-echo-workspace/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@vox-echo-workspace/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@vox-echo-workspace/backend:build:development"
          },
          "production": {
            "buildTarget": "@vox-echo-workspace/backend:build:production"
          }
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{workspaceRoot}/coverage/{projectRoot}"
        ],
        "options": {
          "jestConfig": "apps/backend-voxecho/jest.config.ts",
          "passWithNoTests": true
        },
        "configurations": {
          "ci": {
            "ci": true,
            "codeCoverage": true
          }
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.2",
    "@prisma/client": "^6.15.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@nestjs/testing": "^10.4.20",
    "@nx/eslint": "^21.4.1",
    "@nx/jest": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@nx/webpack": "^21.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nx": "^21.4.1",
    "prisma": "^6.15.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "test": "jest --config=jest.config.ts --verbose",
    "test:watch": "jest --config=jest.config.ts --verbose --watch",
    "test:cov": "jest --config=jest.config.ts --coverage"
  }
}
