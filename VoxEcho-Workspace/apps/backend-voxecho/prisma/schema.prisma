generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Incident {
  id          String    @id @default(uuid())
  title       String
  description String
  media       String[]  @default([])
  tags        String[]  @default([])
  location    Json      // Stores latitude and longitude
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("incidents")
}
